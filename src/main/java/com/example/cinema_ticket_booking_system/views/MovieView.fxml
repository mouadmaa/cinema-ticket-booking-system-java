<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema_ticket_booking_system.controllers.MovieController">
   <VBox prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;" AnchorPane.bottomAnchor="0.0" 
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
      <Label styleClass="h2" text="Movie Management" textAlignment="CENTER">
         <font>
            <Font size="24.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <Button fx:id="addMovieButton" onAction="#handleAddMovieButton" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 2;" 
                styleClass="button-success" text="Add New Movie">
            <graphic>
               <FontAwesomeIconView glyphName="FILM" size="16" fill="WHITE" />
            </graphic>
            <HBox.margin>
               <Insets bottom="10.0"/>
            </HBox.margin>
         </Button>
      </HBox>
      <TableView fx:id="movieTableView" VBox.vgrow="ALWAYS" styleClass="table">
         <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="titleColumn" text="Title"/>
            <TableColumn fx:id="genreColumn" text="Genre"/>
            <TableColumn fx:id="durationColumn" text="Duration"/>
            <TableColumn fx:id="releaseDateColumn" text="Release Date"/>
            <TableColumn fx:id="descriptionColumn" text="Description"/>
            <TableColumn fx:id="actionsColumn" text="Actions"/>
         </columns>
      </TableView>
   </VBox>
</AnchorPane>
