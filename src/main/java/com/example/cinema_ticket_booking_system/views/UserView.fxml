<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema_ticket_booking_system.controllers.UserController">
   <VBox prefHeight="550.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;" AnchorPane.bottomAnchor="0.0" 
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
      </padding>
      <Label styleClass="h2" text="User Management" textAlignment="CENTER">
         <font>
            <Font size="24.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#handleAddUserButton" 
                styleClass="btn, btn-primary" text="Add New User">
            <HBox.margin>
               <Insets bottom="10.0"/>
            </HBox.margin>
         </Button>
      </HBox>
      <TableView fx:id="userTableView" VBox.vgrow="ALWAYS" styleClass="table">
         <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="roleColumn" text="Role"/>
            <TableColumn fx:id="firstNameColumn" text="First Name"/>
            <TableColumn fx:id="lastNameColumn" text="Last Name"/>
            <TableColumn fx:id="usernameColumn" text="Username"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="phoneNumberColumn" text="Phone"/>
            <TableColumn fx:id="createdAtColumn" text="Created At"/>
            <TableColumn fx:id="updatedAtColumn" text="Updated At"/>
            <TableColumn fx:id="actionsColumn" text="Actions"/>
         </columns>
         <VBox.margin>
            <Insets bottom="10.0"/>
         </VBox.margin>
      </TableView>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="760.0" spacing="20.0">
         <Button fx:id="prevButton" mnemonicParsing="false" onAction="#handlePrevButton" styleClass="btn, btn-secondary" text="Previous"/>
         <Label fx:id="pageLabel" styleClass="h4" text="Page 1">
            <font>
               <Font size="16.0"/>
            </font>
         </Label>
         <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNextButton" styleClass="btn, btn-secondary" text="Next"/>
      </HBox>
   </VBox>
</AnchorPane>